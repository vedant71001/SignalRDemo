@model SignalRDemo.Models.Notification

@{
    ViewData["Title"] = "Index";
}

<h1>Server Side</h1>

<div id="servermsg">
    <ul id="msglist">

    </ul>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" id="message" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Send" onclick="SendToClient()" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="button" value="Record" onclick="RecordAudio()" class="btn btn-primary" />
            </div>
            <div class="form-group d-none" id="sendAudio">
                <input type="button" value="Send Audio" onclick="SendAudio()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/ServerNotification.js"></script>
}
